		{
			"name": "1. Add an Element",
			"item": [
				{
					"name": "1. Add Element",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "6ddbb8c8-b635-4146-b8af-0bbe822c591d",
								"exec": [
									"tests[\"Status code is 201\"] = responseCode.code === 201;",
									"",
									"let jsonData = JSON.parse(responseBody);",
									"",
									"postman.setEnvironmentVariable('EMAIL_ADDED', jsonData.email);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"name": "Content-Type",
								"type": "text",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"ryanlydev@gmail.com\"\n}"
						},
						"url": {
							"raw": "{{SERVER}}/mailinglist",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist"
							]
						}
					},
					"response": []
				},
				{
					"name": "1. Check that the element was correctly added",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "760cc802-cef3-4ef6-8bb7-427895ff901a",
								"exec": [
									"tests[\"Status code is 200\"] = responseCode.code === 200;",
									"",
									"let jsonData = JSON.parse(responseBody);",
									"",
									"let email_found = false;",
									"for(let i = 0;i < jsonData.items;i++){",
									"    if(jsonData.data[i] === environment['EMAIL_ADDED']){",
									"        email_found = true;",
									"    }",
									"}",
									"",
									"tests[\"Email was correctly added\"] = email_found;"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{SERVER}}/mailinglist",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist"
							]
						}
					},
					"response": []
				},
				{
