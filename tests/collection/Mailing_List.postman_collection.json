{
	"info": {
		"_postman_id": "f01e4345-cc94-4ae3-8370-60e1cc7cf635",
		"name": "Mailing_List",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Add an Element",
			"item": [
				{
					"name": "1. Add Element",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "6ddbb8c8-b635-4146-b8af-0bbe822c591d",
								"exec": [
									"tests[\"Status code is 201\"] = responseCode.code === 201;",
									"",
									"let jsonData = JSON.parse(responseBody);",
									"",
									"postman.setEnvironmentVariable('EMAIL_ADDED', jsonData.email);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"name": "Content-Type",
								"type": "text",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{API_KEY}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"ryanlydev@gmail.com\"\n}"
						},
						"url": {
							"raw": "{{SERVER}}/mailinglist/subscribe",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist",
								"subscribe"
							]
						}
					},
					"response": []
				},
				{
					"name": "1. Check that the element was correctly added to Mailchimp",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "760cc802-cef3-4ef6-8bb7-427895ff901a",
								"exec": [
									"tests[\"Status code is 200\"] = responseCode.code === 200;",
									"",
									"let jsonData = JSON.parse(responseBody);",
									"",
									"let email_found = false;",
									"if(jsonData.email === environment['EMAIL_ADDED']){",
									"    email_found = true;",
									"}",
									"",
									"tests[\"Email was correctly added\"] = email_found;"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{API_KEY}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{SERVER}}/mailinglist/{{EMAIL_ADDED}}",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist",
								"{{EMAIL_ADDED}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "1. Cleanup: Delete Email from Mailchimp",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "04c85932-29b0-4188-a524-f6c2b8ea7ab8",
								"exec": [
									"tests[\"Email was successfully deleted.\"] = responseCode.code === 204;"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"type": "text",
								"value": "Bearer {{API_KEY}}"
							}
						],
						"url": {
							"raw": "{{SERVER}}/mailinglist/{{EMAIL_ADDED}}",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist",
								"{{EMAIL_ADDED}}"
							]
						}
					},
					"response": []
				}
			],
			"protocolProfileBehavior": {}
		},
		{
			"name": "2. Negative Path: Add Invalid Email",
			"item": [
				{
					"name": "2. Negative Path: Add Invalid Email",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "5b6649e4-2a13-49df-af66-0ff3c4ac7400",
								"exec": [
									"tests[\"Status code is 400 (failed)\"] = responseCode.code === 400;",
									"",
									"let jsonData = JSON.parse(responseBody);",
									"",
									"postman.setEnvironmentVariable(\"BAD_EMAIL\", responseBody.email);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"name": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{API_KEY}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"email\": \"rasdasdad@gmail\"\n}"
						},
						"url": {
							"raw": "{{SERVER}}/mailinglist/subscribe",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist",
								"subscribe"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Check that Email was not Added",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "7c5aca37-991d-4695-8eb3-675e0cbdd2a8",
								"exec": [
									"tests[\"Email was not added to Mailchimp\"] = responseCode.code === 404;"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{API_KEY}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{SERVER}}/mailinglist/{{BAD_EMAIL}}",
							"host": [
								"{{SERVER}}"
							],
							"path": [
								"mailinglist",
								"{{BAD_EMAIL}}"
							]
						}
					},
					"response": []
				}
			],
			"protocolProfileBehavior": {}
		}
	],
	"protocolProfileBehavior": {}
}